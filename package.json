{
  "name": "screening-app-backend",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "14.16.1",
    "npm": "7.15.0"
  },
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc && nodemon --watch 'backend/**/*.ts' --exec 'ts-node' backend/server.ts\" \"wait-on http://localhost:5000 && npm start --prefix frontend\"",
    "postinstall": "tsc",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },

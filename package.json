  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.2.0",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.2",
    "@types/react-router-bootstrap": "^0.24.5",
    "@types/react-scroll": "^1.8.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14",
    "nodemailer": "^6.6.2",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
